<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:textColorLink">@color/colorPrimary</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>
    <style name="DatePicker" parent="@android:style/Theme.Holo.Light">
        <item name="android:datePickerStyle">@android:style/Widget.DatePicker</item>
    </style>
    <style name="ParentButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/defaultTextSize</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DefaultButton" parent="ParentButton">
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="RatingBarTheme" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:progressTint">@color/rating_bar_fill</item>
        <item name="android:numStars">5</item>
    </style>


</resources>
